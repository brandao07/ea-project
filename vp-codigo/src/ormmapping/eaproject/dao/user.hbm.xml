<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="eaproject.dao.user" table="`user`" lazy="false">
		<id name="UserId" column="UserId" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="role" cascade="lock" column="RoleRoleId" class="eaproject.dao.role" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<many-to-one name="team" cascade="lock" column="TeamTeamId" class="eaproject.dao.team" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="Name" column="Name" type="string" length="255" not-null="false" lazy="false"/>
		<property name="Email" column="Email" type="string" length="255" not-null="false" lazy="false"/>
		<property name="Password" column="Password" type="string" length="255" not-null="false" lazy="false"/>
		<property name="Gender" column="Gender" type="string" length="255" not-null="false" lazy="false"/>
		<property name="Age" column="Age" type="integer" length="10" not-null="true" lazy="false"/>
		<property name="Height" column="Height" type="double" not-null="true" lazy="false"/>
		<property name="Weight" column="Weight" type="double" not-null="true" lazy="false"/>
		<property name="IsActive" column="IsActive" type="boolean" not-null="true" lazy="false"/>
		<property name="RegisterDate" column="RegisterDate" type="timestamp" not-null="false" lazy="false"/>
		<set name="ORM_Trial" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="UserUserId" not-null="true"/>
			<one-to-many class="eaproject.dao.trial"/>
		</set>
	</class>
</hibernate-mapping>

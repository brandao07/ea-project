<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="dao.Team" table="Team" lazy="false">
		<id name="TeamId" column="TeamId" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="club" cascade="lock" column="ClubClubId" class="dao.Club" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="Name" column="Name" type="string" length="255" not-null="false" lazy="false"/>
		<property name="IsActive" column="IsActive" type="boolean" not-null="true" lazy="false"/>
		<property name="CreationDate" column="CreationDate" type="timestamp" not-null="false" lazy="false"/>
		<set name="ORM_User" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="TeamTeamId" not-null="true"/>
			<one-to-many class="dao.User"/>
		</set>
	</class>
</hibernate-mapping>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="dao.Competition" table="Competition" lazy="false">
		<id name="CompetitionId" column="CompetitionId" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="Name" column="Name" type="string" length="255" not-null="false" lazy="false"/>
		<property name="StartDate" column="StartDate" type="timestamp" not-null="false" lazy="false"/>
		<property name="EndDate" column="EndDate" type="timestamp" not-null="false" lazy="false"/>
		<property name="IsActive" column="IsActive" type="boolean" not-null="true" lazy="false"/>
		<property name="CreationDate" column="CreationDate" type="timestamp" not-null="false" lazy="false"/>
		<set name="ORM_Trial" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="CompetitionCompetitionId" not-null="true"/>
			<one-to-many class="dao.Trial"/>
		</set>
		<set name="ORM_Notification" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="CompetitionCompetitionId" not-null="true"/>
			<one-to-many class="dao.Notification"/>
		</set>
	</class>
</hibernate-mapping>

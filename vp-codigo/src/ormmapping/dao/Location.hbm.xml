<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="dao.Location" table="Location" lazy="false">
		<id name="LocationId" column="LocationId" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="Latitude" column="Latitude" type="float" not-null="true" lazy="false"/>
		<property name="Longitude" column="Longitude" type="float" not-null="true" lazy="false"/>
		<property name="Address" column="Address" type="string" length="255" not-null="false" lazy="false"/>
		<property name="City" column="City" type="string" length="255" not-null="false" lazy="false"/>
		<property name="Country" column="Country" type="string" length="255" not-null="false" lazy="false"/>
		<property name="PostalCode" column="PostalCode" type="string" length="255" not-null="false" lazy="false"/>
		<property name="CreationDate" column="CreationDate" type="timestamp" not-null="false" lazy="false"/>
		<set name="ORM_Trial" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="LocationLocationId" not-null="true"/>
			<one-to-many class="dao.Trial"/>
		</set>
	</class>
</hibernate-mapping>

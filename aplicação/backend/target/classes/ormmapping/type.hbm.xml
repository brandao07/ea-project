<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="eaproject.dao.Type" table="Type" lazy="false">
		<id name="TypeId" column="TypeId" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="Name" column="Name" type="string" length="255" not-null="false" lazy="false"/>
		<property name="NumberOfPersons" column="NumberOfPersons" type="integer" length="10" not-null="true" lazy="false"/>
		<property name="CreationDate" column="CreationDate" type="timestamp" not-null="false" lazy="false"/>
		<set name="ORM_Trial" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="TypeTypeId" not-null="true"/>
			<one-to-many class="eaproject.dao.Trial"/>
		</set>
	</class>
</hibernate-mapping>
